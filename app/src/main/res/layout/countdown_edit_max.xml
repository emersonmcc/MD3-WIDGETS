<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/max_frameLayout"
    android:theme="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fullscreen_background"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/countdownTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_gravity="center"
        android:layout_marginRight="39dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_gravity="center"
        android:layout_marginLeft="39dp"
        android:textColor="#FFFFFF"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="75dp"
        android:textSize="50sp"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:text="00"
        android:focusable="false"
        android:visibility="invisible"
        android:maxLength="2" />

    <NumberPicker
        android:id="@+id/hoursPicker"
        style="@android:style/Widget.Material.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginEnd="75dp"
        android:focusable="false"
        android:theme="@style/AppTheme.Picker"/>

    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:text="00"
        android:visibility="invisible"
        android:maxLength="2" />

    <NumberPicker
        android:id="@+id/minutesPicker"
        style="@android:style/Widget.Material.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:theme="@style/AppTheme.Picker"/>

    <TextView
        android:id="@+id/seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:layout_marginStart="75dp"
        android:textColor="#FFFFFF"
        android:inputType="number"
        android:text="00"
        android:maxLength="2"
        android:focusable="false"
        android:visibility="invisible"/>

    <NumberPicker
        android:id="@+id/secondsPicker"
        style="@android:style/Widget.Material.NumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:focusable="false"
        android:descendantFocusability="beforeDescendants"
        android:theme="@style/AppTheme.Picker"/>

    <Button
        android:id="@+id/playBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:background="@drawable/ic_start" />

    <Button
        android:id="@+id/exitFllscreenBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_fullscreen_exit"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"/>

</FrameLayout>